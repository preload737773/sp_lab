@model Porotkin_SP_9.Models.AccessRecord

<form method="post" enctype="multipart/form-data" asp-action="ImportFromFile">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Import From File</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <input type="file" name="file" class="form-control">
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>